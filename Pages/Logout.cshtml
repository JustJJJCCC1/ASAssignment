@page
@model ASAssignment1.Pages.LogoutModel
@{
    ViewData["Title"] = "Logout";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["LogoutMessage"] != null)
{
    <p style="color: green; font-weight: bold;">@TempData["LogoutMessage"]</p>
}

<script>
    setTimeout(function() {
        window.location.href = "/Login";
    }, 3000); // Redirect after 3 seconds
</script>